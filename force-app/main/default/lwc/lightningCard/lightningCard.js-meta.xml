    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="cardValue" label="Card Value" type="String" role="inputOnly" />

            <property name="useSingleSelect" label="Use Single Select" type="Boolean"
